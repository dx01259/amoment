<?xml version="1.0" encoding="utf-8" ?>
<logging>
    <loggers>
        <system-logger>
            <!-- fatal, error, warn, info, debug-->
            <level>debug</level>
            <!--appender, file, socket -->
            <appendr>file</appendr>
            <address></address>
            <file-bind>
                <type id="debug" file="syslog-debug" />
                <type id="info" file="syslog-info" />
                <type id="warn" file="syslog-warn" />
                <type id="error" file="syslog-error" />
                <type id="fatal" file="syslog-fatal" />
            </file-bind>
        </system-logger>
        <user-logger>
            <!-- fatal, error, warn, info, debug-->
            <level>debug</level>
            <appendr>file</appendr>
            <address></address>
            <file-bind>
                <type id="debug" file="user-debug" />
                <type id="info" file="user-info" />
                <type id="warn" file="user-warn" />
                <type id="error" file="user-error" />
                <type id="fatal" file="user-fatal" />
            </file-bind>
        </user-logger>
        <custom-logger>
            <!-- fatal, error, warn, info, debug-->
            <level>debug</level>
            <appendr>file</appendr>
            <address></address>
            <file-bind>
                <type id="debug" file="custom-info" />
            </file-bind>
        </custom-logger>
    </loggers>
    <file-loggs>
        <file id="syslog-debug" prefix="syslog-debug" suffix=".txt" path="syslog" span-type="month" using-buffer="not" buffer-size="1000" encoding="utf-8" />
    </file-loggs>
</logging>